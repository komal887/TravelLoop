<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signup - TravelLoop</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa; /* consistent with app */
    }
    .card {
      border-radius: 15px;
      overflow: hidden;
      transition: transform 0.3s, box-shadow 0.3s;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }
    .btn-success {
      background-color: #198754;
      border: none;
      font-weight: 600;
      transition: transform 0.3s, box-shadow 0.3s;
    }
    .btn-success:hover {
      background-color: #157347;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    .text-success {
      color: #198754 !important;
    }
    .form-control:focus {
      border-color: #198754;
      box-shadow: 0 0 0 0.2rem rgba(25,135,84,0.25);
    }
    @media (max-width: 576px) {
      .card-body {
        padding: 2rem 1.5rem;
      }
    }
  </style>
</head>
<body class="d-flex align-items-center justify-content-center vh-100">

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <!-- Card -->
        <div class="card shadow-sm border-0 rounded-4">
          <div class="card-body p-4">
            <h2 class="text-center text-success mb-4">Sign Up on TravelLoop</h2>

            <!-- Flash Messages -->
            <% if (error && error.length > 0) { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% } %>

            <% if (success && success.length > 0) { %>
              <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% } %>

            <!-- Signup Form -->
            <form id="signupForm" action="/signup" method="POST" novalidate>
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input 
                  name="username" 
                  type="text" 
                  id="username" 
                  class="form-control rounded-pill" 
                  placeholder="Choose a username" 
                  required 
                />
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input 
                  name="email" 
                  type="email" 
                  id="email" 
                  class="form-control rounded-pill" 
                  placeholder="Enter your email" 
                  required 
                />
              </div>
              
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input 
                  name="password" 
                  type="password" 
                  id="password" 
                  class="form-control rounded-pill" 
                  placeholder="Create a strong password" 
                  required 
                />
              </div>

              <div class="d-grid">
                <button id="signupBtn" class="btn btn-success btn-lg" type="submit">Sign Up</button>
              </div>
            </form>

            <p class="text-center mt-3 mb-0">
              Already have an account? <a href="/login" class="text-decoration-none text-success">Login here</a>
            </p>

          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Prevent double submission -->
  <script>
    const signupForm = document.getElementById('signupForm');
    const signupBtn = document.getElementById('signupBtn');

    signupForm.addEventListener('submit', function() {
      signupBtn.disabled = true;
      signupBtn.innerText = 'Signing up...';
    });
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
