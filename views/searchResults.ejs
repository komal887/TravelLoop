<% layout("layouts/boilerplate") %>

<div class="container mt-4">
  <h2 class="text-center mb-4 text-primary">
    Search Results for "<%= query %>"
  </h2>

  <% if (results.length > 0) { %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
      <% results.forEach(travel => { %>
        <div class="col">
          <div class="card shadow-lg h-100 rounded-3">
            <img src="<%= travel.imageURL %>" class="card-img-top img-fluid rounded-top" alt="<%= travel.packageName %>">
            <div class="card-body">
              <h5 class="card-title text-primary fw-bold"><%= travel.packageName %></h5>
              <p class="card-text text-muted">
                <%= travel.description.substring(0,100) %>...
              </p>
              <p class="fw-bold text-success">â‚¹ <%= travel.price %></p>
              <a href="/travel/<%= travel._id %>" class="btn btn-success btn-sm">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="alert alert-warning text-center">
      No results found for "<%= query %>" 
    </div>
  <% } %>
</div>
