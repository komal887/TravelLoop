<% layout("layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Card -->
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white text-center fs-4 fw-bold">
          Adding a New Tour Package
        </div>
        <div class="card-body p-4">

          <form method="POST" action="/travel"  novalidate>
            
            <div class="mb-3">
              <label for="title" class="form-label fw-semibold">Title</label>
              <input id="title" type="text" name="newtravel[packageName]" class="form-control" placeholder="Add a catchy title" required>
            </div>

            <div class="mb-3">
              <label for="description" class="form-label fw-semibold">Description</label>
              <textarea id="description" name="newtravel[description]" rows="3" class="form-control" required></textarea>
            </div>

            <div class="mb-3">
              <label for="includes" class="form-label fw-semibold">Includes (comma-separated)</label>
              <textarea id="includes" name="newtravel[includes]" rows="2" class="form-control" required></textarea>
            </div>

            <div class="mb-3">
              <label for="imagefilename" class="form-label fw-semibold">Image File Name</label>
              <input id="imagefilename" type="text" name="newtravel[imageFileName]" class="form-control">
            </div>

            <div class="mb-3">
              <label for="imageurl" class="form-label fw-semibold">Image URL</label>
              <input id="imageurl" type="url" name="newtravel[imageURL]" class="form-control">
            </div>

            <div class="row">
              <div class="mb-3 col-md-4">
                <label for="price" class="form-label fw-semibold">Price</label>
                <input id="price" type="number" name="newtravel[price]" class="form-control" placeholder="1200" required>
              </div>

              <div class="mb-3">
  <label for="category" class="form-label fw-semibold">Category</label>
  <select id="category" name="newtravel[category]" class="form-control" required>
    <option value="">-- Select Category --</option>
    <option value="adventure">Adventure</option>
    <option value="luxury">Luxury</option>
    <option value="relaxation">Relaxation</option>
    <option value="forest">Forest</option>
    <option value="beach">Beach</option>
    <option value="pilgrimage">Pilgrimage</option>
    <option value="trekking">Trekking</option>
    
  </select>
</div>

              <div class="mb-3 col-md-8">
                <label for="country" class="form-label fw-semibold">Country</label>
                <input id="country" type="text" name="newtravel[country]" class="form-control" placeholder="India" required>
              </div>
            </div>

            <div class="mb-3">
              <label for="location" class="form-label fw-semibold">Location</label>
              <input id="location" type="text" name="newtravel[location]" class="form-control" placeholder="Jaipur, Rajasthan" required>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <a href="/travel" class="btn btn-outline-secondary">Cancel</a>
              <button class="btn btn-success" type="submit">Add Package</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
